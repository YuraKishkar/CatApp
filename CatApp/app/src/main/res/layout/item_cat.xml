<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent" android:layout_height="wrap_content"
                                   android:layout_margin="5dp"
                                   app:cardCornerRadius="10dp">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <ImageView
                        android:id="@+id/iv_cat"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
            </com.facebook.shimmer.ShimmerFrameLayout>


            <LinearLayout
                    android:id="@+id/ll_arrow_title"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right_24dp"
                        android:rotation="90"/>

            </LinearLayout>


            <LinearLayout
                    android:id="@+id/ll_expandable"
                    android:gravity="center"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                <Button
                        android:id="@+id/btn_favourite"
                        android:text="@string/favourite_button"
                        android:drawableLeft="@drawable/ic_star_border_24dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="30dp"
                        android:gravity="center"
                        android:background="@drawable/btn_ripple"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:textAllCaps="false"

                        android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"/>
                <Button
                        android:background="@drawable/btn_ripple"
                        android:id="@+id/btn_download"
                        android:text="@string/download_button"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/ic_file_download_24dp"
                        android:gravity="center"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:layout_width="150dp"
                        android:layout_height="40dp"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>